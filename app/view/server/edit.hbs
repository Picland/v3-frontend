{{> header}}

<div class="ui grid">
  <div class="four wide column">
    <a class="avatar"
       href="/articles?author={{user._id}}"
       data-title="{{user.name}} | {{user.gender}}"
       data-content="{{user.bio}}">
      <img class="avatar" src="/img/{{user.avatar}}">
    </a>
  </div>

  <div class="eight wide column">
    <form class="ui form segment" method="post" action="/articles/{{article._id}}/edit">
      <div class="field required">
        <label>标题</label>
        <input type="text" name="title" value="{{article.title}}">
      </div>
      <div class="field required">
        <label>内容</label>
        <textarea name="content" rows="15">{{article.content}}</textarea>
      </div>
      <input type="submit" class="ui button" value="发布">
    </form>
  </div>
</div>

{{> footer}}